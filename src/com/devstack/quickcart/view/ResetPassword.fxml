<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="container" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devstack.quickcart.controller.ResetPasswordController">
   <children>
      <Label layoutX="189.0" layoutY="61.0" text="Reset Password">
         <font>
            <Font name="Arial Black" size="30.0" />
         </font>
      </Label>
      <Label layoutX="75.0" layoutY="144.0" text="Enter New Password">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtNewPswd" layoutX="75.0" layoutY="169.0" prefHeight="25.0" prefWidth="493.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <Button layoutX="242.0" layoutY="330.0" mnemonicParsing="false" onAction="#btnChangePswd" prefHeight="30.0" prefWidth="158.0" style="-fx-background-color: #3ae180; -fx-background-radius: 30;" text="Change Password" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label layoutX="75.0" layoutY="211.0" text="Re-Enter New Password">
         <font>
            <Font name="Arial" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtNewPswdReEnter" layoutX="75.0" layoutY="236.0" prefHeight="25.0" prefWidth="493.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </TextField>
      <CheckBox layoutX="75.0" layoutY="270.0" mnemonicParsing="false" onAction="#showPswd" text="Show Password">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </CheckBox>
   </children>
</AnchorPane>
